<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/default_background_color"
    android:focusableInTouchMode="true"
    android:tag="@string/umeng_comm_actionbar_tag"
    android:orientation="vertical">

    <!-- title -->

    <RelativeLayout
        android:id="@+id/umeng_comm_title_bar_root"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <ImageView
            android:id="@+id/umeng_comm_setting_back"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:contentDescription="@string/umeng_comm_new_post"
            android:padding="@dimen/umeng_comm_dimen_20px"
            android:src="@drawable/umeng_comm_title_back"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/umeng_comm_setting_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:singleLine="true"
            android:ellipsize="end"
            android:src="?attr/umeng_comm_setting_camera"
            android:text="@string/umeng_comm_account_setting"
            android:maxWidth="@dimen/umeng_comm_dimen_320px"
            android:textColor="?attr/umeng_comm_album_text"
            android:textSize="@dimen/umeng_comm_dimen_40px" />

        <Button
            android:id="@+id/umeng_comm_save_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:textColor="?attr/umeng_comm_small_title_color"
            android:background="@drawable/umeng_comm_tv_style"
            android:textSize="@dimen/text_big16_size" />

        <Button
            android:id="@+id/umeng_comm_sixin"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@id/umeng_comm_setting_title"
            android:background="?attr/umeng_comm_chat_icon"
            android:visibility="gone" />
    </RelativeLayout>

    <include layout="@layout/umeng_comm_divide_line" />

</LinearLayout>